@using EntityLayer.Concrete
@model List<Portfolio> 

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Referanslarım </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach (var p in Model)
            {
            <div class="grid-item">
                <a href="https://dribbble.com">
                    <figure class="portfolio-item">
                        <img src="@p.ImageUrl" data-bp="@p.ImageUrl" />
                        <figcaption>
                            <h4 class="h5 mb-0">@p.Name</h4>
                            <div>Dribbble.com</div>
                        </figcaption>
                    </figure>
                </a>
            </div>
            }
        </div>
    </div>
</div>